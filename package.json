{
  "name": "@wowvendor/commitlint-config",
  "version": "1.0.0",
  "description": "Commitlint config enforcing conventional commits",
  "main": "index.js",
  "files": [
    "index.js"
  ],
  "scripts": {
    "test": "run-s test:*",
    "test:lint": "eslint .",
    "release": "standard-version"
  },
  "author": "weyheyhey <iweyheyhey@gmail.com>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wowvendor/commitlint-config.git"
  },
  "keywords": [
    "conventional-changelog",
    "commitlint-config",
    "commitlint"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@wowvendor/eslint-config-base": "^1.5.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "standard-version": "^7.0.1"
  },
  "dependencies": {
    "@commitlint/config-conventional": "^8.2.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{md,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
